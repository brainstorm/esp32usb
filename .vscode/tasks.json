{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build app",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "command": "make",
            "type": "shell",
            "args": [
                //"-j",
                //"4",
                "app"
            ],
            "presentation": {
                "reveal": "always",
                "clear": true
            },
            "problemMatcher": {
                "owner": "cpp",
                "fileLocation": "absolute",
                "pattern": {
                    "regexp": "^(.*):(\\d+):(\\d+):\\s+(warning|error):\\s+(.*)$",
                    "file": 1,
                    "line": 2,
                    "column": 3,
                    "severity": 4,
                    "message": 5
                }
            }
        },
        {
            "label": "clean app",
            "command": "make",
            "type": "shell",
            "args": [
                "clean"
            ],
            "presentation": {
                "reveal": "always",
                "clear": true
            }
        },
        {
            "label": "flash app",
            "command": "make",
            "type": "shell",
            "args": [
                "app-flash"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "monitor",
            "command": "make",
            "type": "shell",
            "args": [
                "monitor"
            ],
            "presentation": {
                "reveal": "always"
            }
        },
        {
            "label": "menuconfig",
            "type": "process",
            "windows": {
                "command": "bash",
                "args": [
                    "make",
                    "menuconfig"
                ]
            },
            "presentation": {
                "reveal": "always"
            },
            "problemMatcher": []
        }
    ]
}